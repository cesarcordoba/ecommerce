.gamas(layout="row" layout-align="center center")
    .gamas-content(flex="90")
        .busqueda
            md-autocomplete(
                flex
                md-selected-item="ctrl.gamas.item"
                md-selected-item-change="ctrl.gamas.seleccion(item)"
                md-search-text="ctrl.gamas.busqueda"
                md-search-text-change="ctrl.gamas.buscar(ctrl.gamas.busqueda)" 
                md-items="item in ctrl.gamas.filtrar(ctrl.gamas.busqueda)" 
                md-item-text="item.nombre"
                placeholder="Nombre")
                md-item-template
                    span {{item.nombre}}
            md-button(ng-click="ctrl.gamas.crear()"  md-whiteframe="1" )
                md-icon add
        md-card
            md-table-container
                table(md-table md-row-select multiple)
                    thead(md-head)
                        tr(md-row)
                            th(md-column md-numeric) Nombre
                            th(md-column)
                    tbody(md-body)
                        tr(md-row md-select="dato" md-select-id="name" md-auto-select ng-repeat="item in ctrl.gamas.items")
                            td(md-cell) {{item.nombre}}
                            td(md-cell)
                                md-fab-toolbar(md-open="false" count="0"  md-direction="left" flex)
                                    md-fab-trigger
                                        md-button
                                            md-icon more_vert
                                    md-toolbar
                                        md-fab-actions(layout="row")
                                            md-button(ng-click="item.ir()")
                                                md-icon edit
                                                span Editar
            cl-paging(cl-pages="ctrl.gamas.filtros.paginas" cl-steps="6" cl-page-changed="ctrl.gamas.obtener()" cl-align="start start" cl-current-page="ctrl.gamas.filtros.pagina")

                                                
