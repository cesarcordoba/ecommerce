						.nombre-content
							p {{modulo.nombre}}
							md-button ver más
						.lineas
							.linea(ng-repeat="n in [1,2,3,4]")
					.item-container(id="{{modulo.key}}")
						.item(ng-repeat="item in modulo.items")
							.imagen(style=" background-image : url( {{item.item.portada.link}} )" ng-if="item.item")
